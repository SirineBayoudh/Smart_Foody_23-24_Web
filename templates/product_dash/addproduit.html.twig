{% extends 'base_back.html.twig' %}

{% block title %}Ajouter un produit{% endblock %}

{% block body %}

<style>
    .btn-custom {
    background-color: #56ab2f;
    border-color: #56ab2f;
}

.btn-custom:hover {
    background-color: #72c22f;
    border-color: #72c22f;
}

</style>

<div class="col-10 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ajouter un produit</h4>
            <p class="card-description">Veuillez remplir le formulaire ci-dessous pour ajouter un produit.</p>
            {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }} 
            <div class="form-group">
                {{ form_label(form.marque) }}
                {{ form_widget(form.marque, {'attr': {'class': 'form-control' ~ (form_errors(form.marque) ? ' is-invalid' : ''), 'placeholder': 'Marque'}}) }}
                {% if form_errors(form.marque) %}
                    <div class="invalid-feedback">
                        {{ form_errors(form.marque) }}
                    </div>
                {% endif %}
            </div>
            <div class="form-group">
                {{ form_label(form.categorie) }}
                {{ form_widget(form.categorie, {'attr': {'class': 'form-control' ~ (form_errors(form.categorie) ? ' is-invalid' : '')}}) }}
                {% if form_errors(form.categorie) %}
                    <div class="invalid-feedback">
                        {{ form_errors(form.categorie) }}
                    </div>
                {% endif %}
            </div>
            <div class="form-group">
                {{ form_label(form.prix) }}
                {{ form_widget(form.prix, {'attr': {'class': 'form-control' ~ (form_errors(form.prix) ? ' is-invalid' : ''), 'placeholder': 'Prix'}}) }}
                {% if form_errors(form.prix) %}
                    <div class="invalid-feedback">
                        {{ form_errors(form.prix) }}
                    </div>
                {% endif %}
            </div>
            <div class="form-group">
                {{ form_label(form.image) }}
                <div class="custom-file">
                    {{ form_widget(form.image, {'attr': {'class': 'custom-file-input' ~ (form_errors(form.image) ? ' is-invalid' : ''), 'id': 'customFile'}}) }}
                    <label class="custom-file-label" for="customFile" id="customFileLabel">Choisir un fichier</label>
                </div>
                {% if form_errors(form.image) %}
                    <div class="invalid-feedback">
                        {{ form_errors(form.image) }}
                    </div>
                {% endif %}
            </div>            
            <div class="form-group">
                {{ form_label(form.critere) }}
                {{ form_widget(form.critere, {'attr': {'class': 'form-control' ~ (form_errors(form.critere) ? ' is-invalid' : '')}}) }}
                {% if form_errors(form.critere) %}
                    <div class="invalid-feedback">
                        {{ form_errors(form.critere) }}
                    </div>
                {% endif %}
            </div>                           
            <button type="submit" class="btn btn-custom mr-2 text-white" id="submitBtn">Ajouter</button>

            {{ form_end(form) }}
        </div>
    </div>
</div>

<script>
    // Effacer le contenu du label du champ de fichier au chargement de la page
    $(document).ready(function() {
        $('#customFileLabel').text("Choisir une image");
    });
</script>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<script>
    document.getElementById('submitBtn').addEventListener('click', function() {
        Swal.fire({
            title: "Est-ce que vous êtes sûr?",
            text: "Voulez-vous vraiment ajouter ce produit ?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Oui, Ajouter!",
            cancelButtonText: "Annuler",
            allowOutsideClick: false, // Empêcher la fermeture en cliquant à l'extérieur
            allowEscapeKey: false // Empêcher la fermeture en appuyant sur la touche Escape
        }).then((result) => {
            if (result.isConfirmed) {
                document.getElementById('objectif-form').submit();
            }
        });
    });
</script>

<style>
    .is-invalid {
    border-color: #dc3545; /* Couleur de bordure rouge */
}
</style>
{% endblock %}
