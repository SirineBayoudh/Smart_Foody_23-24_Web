{% extends 'base_back.html.twig' %}

{% block title %}Edit Product{% endblock %}

{% block body %}
<div class="col-10 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Modifier un produit</h4>
            <p class="card-description">Please update the product information below.</p>
            <form method="POST">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.marque, 'Marque : ') }}
                    {{ form_widget(form.marque, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.categorie, 'Cat√©gorie : ') }}
                    {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.prix, 'Prix : ') }}
                    {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
                </div>
                <button type="submit" class="btn btn-primary mr-2">Update</button>
                {{ form_end(form) }}
            </form>
        </div>
    </div>
</div>
{% endblock %}
