{% extends 'base_back.html.twig' %}

{% block title %}Modifier un produit{% endblock %}

{% block body %}
<div class="col-10 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Modifier un produit</h4>
            <p class="card-description">Veuillez remplir le formulaire ci-dessous pour modifier le produit.</p>
            {{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}
                <div class="form-group">
                    {{ form_label(form.marque) }}
                    {{ form_widget(form.marque, {'attr': {'class': 'form-control', 'placeholder': 'Marque'}}) }}
                    {{ form_errors(form.marque) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.categorie) }}
                    {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.categorie) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.prix) }}
                    {{ form_widget(form.prix, {'attr': {'class': 'form-control', 'placeholder': 'Prix'}}) }}
                    {{ form_errors(form.prix) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.image) }}
                    <div class="custom-file">
                        {{ form_widget(form.image, {'attr': {'class': 'custom-file-input', 'id': 'customFile'}}) }}
                        <label class="custom-file-label" for="customFile">Choisir un fichier</label>
                    </div>
                </div> 
                <div class="form-group">
                    {{ form_label(form.critere) }}
                    {{ form_widget(form.critere, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.critere) }}
                </div>                          
                <button type="submit" class="btn btn-primary mr-2" id="submitBtn">Modifier</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<script>
    document.getElementById('submitBtn').addEventListener('click', function() {
        Swal.fire({
            title: "Est-ce que vous êtes sûr?",
            text: "Voulez-vous vraiment accorder une modification pour ce produit?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Oui, Modifier!",
            cancelButtonText: "Annuler",
            allowOutsideClick: false, // Empêcher la fermeture en cliquant à l'extérieur
            allowEscapeKey: false // Empêcher la fermeture en appuyant sur la touche Escape
        }).then((result) => {
            if (result.isConfirmed) {
                document.getElementById('objectif-form').submit();
            }
        });
    });
</script>
{% endblock %}
