<script>
  // Fonction pour afficher une recette avec sa description et son image
  function displayRecipe(title, description, image) {
    var carousel = document.querySelector(".carousel-testimony.owl-carousel");

    var item = document.createElement("div");
    item.classList.add("item");

    var testimonyWrap = document.createElement("div");
    testimonyWrap.classList.add("testimony-wrap", "p-4", "pb-5");

    var userImg = document.createElement("div");
    userImg.classList.add("user-img", "mb-5");
    userImg.style.backgroundImage = "url(" + image + ")";

    var quote = document.createElement("span");
    quote.classList.add("quote", "d-flex", "align-items-center", "justify-content-center");

    var icon = document.createElement("i");
    icon.classList.add("icon-quote-left");

    quote.appendChild(icon);
    userImg.appendChild(quote);

    var text = document.createElement("div");
    text.classList.add("text", "text-center");

    var descParagraph = document.createElement("p");
    descParagraph.classList.add("mb-5", "pl-4", "line");
    descParagraph.innerHTML = description;

    var name = document.createElement("p");
    name.classList.add("name");
    name.textContent = "Nom de la recette: " + title;

    text.appendChild(descParagraph);
    text.appendChild(name);

    testimonyWrap.appendChild(userImg);
    testimonyWrap.appendChild(text);

    item.appendChild(testimonyWrap);
    carousel.appendChild(item);
  }

  // Fonction pour rechercher les vidéos YouTube en fonction de l'ingrédient
  function searchYouTubeVideos(ingredient) {
    var apiKey = "AIzaSyCXEBk9FVXu4vD2dJUIEDd2GDgVxxtnuMM"; // Remplacez par votre clé d'API YouTube

    var query = encodeURIComponent(ingredient) + " recette";

    var apiUrl = "https://www.googleapis.com/youtube/v3/search?key=" + apiKey + "&part=snippet&type=video&q=" + query + "&maxResults=3";

    return fetch(apiUrl)
      .then(response => response.json())
      .then(data => {
        var videoIds = data.items.map(item => item.id.videoId);
        return videoIds;
      })
      .catch(error => console.error("Erreur lors de la récupération des vidéos YouTube:", error));
  }

  // Fonction pour rechercher les recettes
  function searchRecipes() {
    var ingredient = document.getElementById("ingredient").value.trim();

    if (ingredient === "") {
      alert("Veuillez saisir un ingrédient !");
      return;
    }

    var carousel = document.querySelector(".carousel-testimony.owl-carousel");
    carousel.innerHTML = "";

    var apiKey = "7a54d73f23c24bbab743375dbe147451"; // Remplacez par votre clé d'API Spoonacular

    var apiUrl = "https://api.spoonacular.com/recipes/findByIngredients?apiKey=" + apiKey + "&ingredients=" + encodeURIComponent(ingredient) + "&number=5";

    fetch(apiUrl)
      .then(response => response.json())
      .then(data => {
        data.forEach(recipe => {
          var recipeId = recipe.id;
          var recipeTitle = recipe.title;
          var recipeImage = recipe.image;
          var recipeDescription = "Description de la recette non disponible.";

          var recipeDetailsUrl = "https://api.spoonacular.com/recipes/" + recipeId + "/information?apiKey=" + apiKey;

          fetch(recipeDetailsUrl)
            .then(response => response.json())
            .then(recipeData => {
              recipeDescription = recipeData.summary;
              displayRecipe(recipeTitle, recipeDescription, recipeImage);
            })
            .catch(error => console.error("Erreur lors de la récupération des détails de la recette:", error));
        });

        // Charger les vidéos YouTube
        searchYouTubeVideos(ingredient)
          .then(videoIds => {
            var container = document.getElementById("video-container");
            videoIds.forEach(videoId => {
              var iframe = document.createElement("iframe");
              iframe.width = "300";
              iframe.height = "168.75";
              iframe.src = "https://www.youtube.com/embed/" + videoId;
              iframe.frameborder = "0";
              iframe.allowfullscreen = true;

              var videoDiv = document.createElement("div");
              videoDiv.className = "video";
              videoDiv.appendChild(iframe);

              container.appendChild(videoDiv);
            });
          });
      })
      .catch(error => console.error("Erreur lors de la récupération des recettes:", error));
  }
</script>

