{% extends 'base_back.html.twig' %}

{% block title %}Liste des Commandes{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- Section for buttons -->
    <div class="row">
        <div class="col-md-3 mb-4 stretch-card transparent">
            <div class="card card-tale">
                <div class="card-body">
                    <p class="mb-4">Afficher les Statistiques</p>
                   <a  href="{{ path('statistiques') }}" class="btn btn-primary btn-block">Voir</a>
                    
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4 stretch-card transparent">
            <div class="card card-dark-blue">
                <div class="card-body">
                    <p class="mb-4">Commandes Livrées</p>
                    <a href="{{ path('commandes_livre') }}" class="btn btn-primary btn-block">Voir</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4 stretch-card transparent">
            <div class="card card-light-blue">
                <div class="card-body">
                    <p class="mb-4">Commandes Non Livrées</p>
                    <a href="{{ path('commandes_non_livre') }}" class="btn btn-primary btn-block">Voir</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 stretch-card transparent">
            <div class="card card-light-danger">
                <div class="card-body">
                    <p class="mb-4">Commandes en cours</p>
                    <a href="{{ path('commandes_en_cours') }}" class="btn btn-primary btn-block">Voir</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Table section below buttons -->
    <div class="row mt-4">
        <div class="col-md-12" id="commandeTable">
            <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Nom Client</th>
                        <th>Prénom Client</th>
                        <th>Date Commande</th>
                        <th>Total Commande</th>
                        <th>Remise</th>
                        <th>État</th>
                        <th>Longitude</th>
                        <th>Latitude</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for commande in commandes %}
                    <tr>
                        <td>{{ commande.utilisateur.nom }}</td>
                        <td>{{ commande.utilisateur.prenom }}</td>
                        <td>{{ commande.dateCommande|date('Y-m-d') }}</td>
                        <td>{{ commande.totaleCommande }}</td>
                        <td>{{ commande.remise }}</td>
                        <td>{{ commande.etat }}</td>
                        <td>{{ commande.longitude }}</td>
                        <td>{{ commande.latitude }}</td>
                        <td>
                            <a href="{{ path('commande_detail', {'id': commande.id}) }}" class="btn btn-primary">Afficher</a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>

            <!-- PDF All Commande button below the table -->
            <a href="{{ path('commande_pdf_all') }}" class="btn btn-primary mt-3">PDF All Commande</a>
        </div>
    </div>

    <!-- Container for the statistics chart -->
    <div id="chartContainer" style="display: none;">
        <canvas id="chartClientsFideles"></canvas>
    </div>
</div>



{% endblock %}
