  {% block body %}
      <div class="col-lg-20 grid-margin stretch-card">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title"> Table Stock </h4>
              
              <div class="table-responsive">
                <table class="table table-hover" style="margin:auto">
                  <thead>
                    <tr>
