                              <td style="font-size: 12px;">{{ s.nbvendu }}</td>
                              <td >{{ s.cout }}</td>
                              <td><img src="{{ asset('images/' ~ s.image) }}" alt="Image"></td>
                              <td>  <a href="{{ path('stock_edit', {id: s.id_s}) }}?mode=modifier">
