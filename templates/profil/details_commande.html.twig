{% extends 'profil/profilClient.html.twig' %}
{% block contenu %}
<style>
.qr-code-container {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 2s ease, transform 3s ease;
}

.qr-code-container.show {
    opacity: 1;
    transform: translateY(0);
}

    /* Styles existants */
    .font-weight-bold {
        color: #4CAF50;
        text-align: center;
        margin-bottom: 20px;
        animation: slideInLeft 3s ease forwards; /* Animation pour le titre */
    }
    .form-control {
        border: 1px solid #66BB6A;
    }
    .btn-icon-text {
        display: inline-flex;
        align-items: center;
    }
    .btn-icon-text i {
        margin-right: 5px;
    }
    .centered-buttons {
        display: flex;
        justify-content: center; /* Centrer les boutons */
        gap: 10px;
        margin-bottom: 20px;
    }
    .table thead {
        background-color: #4CAF50;
        animation: fadeInDown 1s ease forwards; /* Animation pour l'en-tête du tableau */
    }
    .table .total {
        color: #66BB6A;
    }
    .btn-primary, .btn-warning {
        background-color: #4CAF50;
        color: white;
        border-color: #388E3C;
        animation: slideInUp 1s ease forwards; /* Animation pour les boutons */
    }
    .btn-warning:hover {
        background-color: #388E3C;
    }
      .table thead th {
        color: white; /* Couleur du texte en blanc */
    }
    .img {
        width: 50px;
        height: 50px;
        background-size: cover;
        background-position: center center;
        border-radius: 50%;
    }
    .table-bordered td, .table-bordered th {
        border-color: #81C784;
    }

    /* Ajout pour espacement et alignement */
    .cart-list {
        margin-bottom: 30px; /* Décalage supplémentaire vers le bas */
        margin-top: 40px; /* Ajout de marge en haut */
        padding: 20px;
        border-radius: 10px; /* Bordures arrondies */
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1); /* Ombre */
        transition: all 0.3s ease; /* Animation de transition */
        background-color: rgba(76, 175, 80, 0.1); /* Couleur de fond dans une nuance de vert (ici vert clair) */
    }

    /* Effet de survol pour le cadre */
    .cart-list:hover {
        transform: translateY(-5px); /* Légère translation vers le haut */
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.2); /* Ombre plus prononcée */
        background-color: rgba(76, 175, 80, 0.2); /* Couleur de fond plus foncée lors du survol */
    }
       .main-content {
        position: relative;
        width: 1500px;
        height: 1500px;
        border-radius: 8px;
        overflow: hidden;
        margin-left: 600px;
        margin-top: 100px;
    }

    @keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-50px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes slideInUp {
        from {
            opacity: 0;
            transform: translateY(50px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes borderAnimation {
        from {
            border: 1px solid transparent; /* Bordure transparente au début */
        }
        to {
            border: 1px solid #4CAF50; /* Bordure solide à la fin */
        }
    }

    /* Nouveaux styles */
    .container {
        display: flex;
        justify-content: space-between;
    }
    .cart-list {
        width: 100%; /* Utilisation de toute la largeur disponible */
        padding: 20px;
        border-radius: 10px; /* Bordures arrondies */
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1); /* Ombre */
        background-color: rgba(76, 175, 80, 0.1); /* Couleur de fond dans une nuance de vert (ici vert clair) */
    }
    .cart-list img {
        max-width: 100%;
        height: auto;
    }
    .cart-left, .cart-right {
        width: 48%; /* Ajustement de la largeur */
    }
        .cart-list {
        width: 90%; /* Utilisation de 90% de la largeur disponible */
        max-width: 1100px; /* Limite maximale de 1200px */
        margin: 20 auto; /* Centrer horizontalement */
        padding: 20px;
        border-radius: 10px; /* Bordures arrondies */
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1); /* Ombre */
        background-color: rgba(76, 175, 80, 0.1); /* Couleur de fond dans une nuance de vert (ici vert clair) */
    }
      .small-table {
        width: 100%;
        border-collapse: collapse;
        border: 1px solid #dddddd;
    }

    .small-table th, .small-table td {
        border: 1px solid #dddddd;
        padding: 8px;
        text-align: left;
    }

    .small-table th {
        background-color: #4CAF50;
        color: white;
    }

    /* Styles existants */
    /* Vos styles existants ici... */

    /* Nouveaux styles */
      /* Nouveaux styles */
    .billing-form {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .billing-form h3 {
        color: #4CAF50;
        text-align: center;
        margin-bottom: 20px;
    }

    .billing-form label {
        font-weight: bold;
        color: #333;
    }

    .billing-form input[type="text"] {
        border: 1px solid #ced4da;
        border-radius: 5px;
        padding: 10px;
        width: 100%;
        margin-bottom: 15px;
    }

    .billing-form img {
        max-width: 100%;
        margin-top: 10px;
    }

    .billing-form .row {
        margin-right: -15px;
        margin-left: -15px;
    }

    .billing-form .col-md-12 {
        padding-right: 15px;
        padding-left: 15px;
    }

    /* Centre le tableau et le titre "Produits Achetés" */
    .cart-left, .cart-right {
        width: 48%; /* Ajustement de la largeur */
        text-align: center; /* Centre le contenu */
    }



</style>
<div class="side" id="commande-container" style="position: relative; width: 1500px; height: 1500px; border-radius: 8px; overflow: hidden; margin-left: 600px; margin-top: 100px;">

    <div class="cart-list">
        <div class="container">
          <div class="cart-right">
    <form action="{{ path('payment', {'id': commande.id}) }}" method="post" class="billing-form">
        <h3 class="font-weight-bold">Détails de la Commande</h3>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label>Date de Commande</label>
                    <input type="text" class="form-control" value="{{ commande.dateCommande|date('Y-m-d') }}" readonly>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label>État de la Commande</label>
                    <input type="text" class="form-control" value="{{ commande.etat }}" readonly>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label>Remise de la Commande</label>
                    <input type="text" class="form-control" value="{{ commande.remise }}" readonly>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label>Total de la Commande</label>
                    <input type="text" class="form-control" value="{{ commande.totaleCommande }}" readonly>
                </div>
            </div>
         
        </div>
    </form>
</div>

            <div class="cart-left"> <!-- Inversion de cart-left et cart-right -->
                <h3 class="font-weight-bold">Produits Achetés</h3>
                <table class="small-table">
                            <th>&nbsp;</th>
                            <th>Produit</th>
                            <th>Prix</th>
                            <th>Quantité</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for ligneCommande in commande.getLignesCommande() %}
                        <tr class="text-center">
                            <td class="image-prod">
                                <div class="img" style="background-image:url('{{ asset(ligneCommande.produit.image) }}');"></div>
                            </td>
                            <td class="product-name">{{ ligneCommande.produit.marque }}</td>
                            <td class="price">{{ ligneCommande.produit.prix }} TND</td>
                            <td class="quantity">{{ ligneCommande.quantite }}</td>
                            <td class="total">{{ ligneCommande.quantite * ligneCommande.produit.prix }} TND</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
                 <div class="col-md-12">
    <label for="qr-code" class="font-weight-bold">QR Code</label>
    <div class="form-group qr-code-container">
        <img src="{{ qrCode }}" alt="QR Code de la commande" class="qr-code">
    </div>
</div>

            </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    var qrCodeContainer = document.querySelector('.qr-code-container');
    qrCodeContainer.classList.add('show');
});

</script>
{% endblock %}
