{% extends 'base.html.twig' %}



{% block body %}
    <div>
        <table>
            <thead>
                <tr>
                    <th>Nom Client</th>
                    <th>Note</th>
                    <th>Commentaire</th>
                    <th>Date</th>
                    <th>Actions</th> <!-- Nouvelle colonne pour les actions -->
                </tr>
            </thead>
            <tbody>
                {% for avis in avis %}
                    <tr>
                        <td>
                            {% if avis.idClient is not null %}
                                {{ avis.idClient.nom }} {{ avis.idClient.prenom }}
                            {% else %}
                                Client non disponible
                            {% endif %}
                        </td>
                        <td>{{ avis.nbEtoiles }}</td>
                        <td>{{ avis.commentaire }}</td>
                        <td>{{ avis.dateAvis|date('d-m-Y') }}</td>
                        <td>
                            {% if user and user.id == avis.idClient.id %}
                                <button onclick="window.location='{{ path('modifier_avis', {'id': avis.id}) }}'">Modifier</button>
                                <button onclick="if(confirm('Êtes-vous sûr de vouloir supprimer cet avis ?')) { window.location='{{ path('supprimer_avis', {'id': avis.id}) }}' }">Supprimer</button>
                            {% else %}
                                <button onclick="window.location='{{ path('signaler_avis', {'id': avis.id}) }}'">Signaler</button>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}