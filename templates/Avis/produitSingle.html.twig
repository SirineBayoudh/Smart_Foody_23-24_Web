  <script>
		document.addEventListener('DOMContentLoaded', function() {
			const nbEtoilesInput = document.querySelector('#{{ form.nb_etoiles.vars.id }}');
			const commentaireInput = document.querySelector('#{{ form.commentaire.vars.id }}');

			// Fonction pour détecter les changements dans le champ de nb_etoiles
			function handleNbEtoilesChange() {
				// Vérifier si le champ nb_etoiles est vide
				if (nbEtoilesInput.value.trim() === '') {
					nbEtoilesInput.classList.add('is-invalid'); // Ajouter la classe d'erreur
					nbEtoilesInput.style.borderColor = 'red'; // Changer la couleur de la bordure en rouge
					return; // Sortir de la fonction si le champ est vide
				}

				// Convertir la valeur en nombre
				const nbEtoilesValue = parseInt(nbEtoilesInput.value.trim());

				// Vérifier si la valeur est en dehors de la plage 1-5
				if (isNaN(nbEtoilesValue) || nbEtoilesValue < 1 || nbEtoilesValue > 5) {
					nbEtoilesInput.classList.add('is-invalid'); // Ajouter la classe d'erreur
					nbEtoilesInput.style.borderColor = 'red'; // Changer la couleur de la bordure en rouge
				} else {
					nbEtoilesInput.classList.remove('is-invalid'); // Retirer la classe d'erreur
					nbEtoilesInput.style.borderColor = 'black'; // Remettre la couleur de la bordure à sa valeur par défaut
				}
			}

			// Fonction pour détecter les changements dans le champ de commentaire
			function handleCommentaireChange() {
				if (commentaireInput.value.trim() !== '') {
					commentaireInput.classList.remove('is-invalid'); // Retirer la classe d'erreur
				} else {
					commentaireInput.classList.add('is-invalid'); // Ajouter la classe d'erreur
				}
			}

			// Écouter les événements de changement dans le champ de nb_etoiles
			nbEtoilesInput.addEventListener('input', function() {
				handleNbEtoilesChange();
			});

			// Écouter les événements de changement dans le champ de commentaire
			commentaireInput.addEventListener('input', function() {
				handleCommentaireChange();
			});

			// Vérifier si le champ de nb_etoiles contient déjà du texte au chargement de la page
			handleNbEtoilesChange();
			// Vérifier si le champ de commentaire contient déjà du texte au chargement de la page
			handleCommentaireChange();
		});
</script>

