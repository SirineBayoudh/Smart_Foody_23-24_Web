		// Fonction pour vérifier si le champ de commentaire est vide
		function commentaireFieldEmpty() {
			return commentaireInput.value.trim() === '';
		}
  
		// Fonction pour vérifier si la valeur de nb_etoiles est valide (entre 1 et 5)
		function isNbEtoilesValid() {
			const nbEtoilesValue = parseInt(nbEtoilesInput.value.trim());
			return !isNaN(nbEtoilesValue) && nbEtoilesValue >= 1 && nbEtoilesValue <= 5;
		}
  
		// Fonction pour gérer la soumission du formulaire
		function handleSubmit(event) {
			if (nbEtoilesFieldEmpty() || commentaireFieldEmpty() || !isNbEtoilesValid()) {
