																																		<link rel="stylesheet" href="../../vendors/ti-icons/css/themify-icons.css">
																																		<link rel="stylesheet" href="../../vendors/css/vendor.bundle.base.css">-->
		<link rel="stylesheet" href="{{asset('css/vertical-layout-light/style.css')}}"> <!-- endinject -->
		<!-- Plugin css for this page -->
		<!-- End plugin css for this page -->
		<!-- inject:css -->
		<link
		rel="stylesheet" href="../../css/vertical-layout-light/style.css"> <!-- endinject -->
		<link
		rel="shortcut icon" href="../../images/trans_logo.png"/>

		<!-- Inclure Bootstrap -->
		<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

		<style>
			.inscri:hover {
				text-decoration: none;
			}
		</style>

	</head>

	<body>
		<div class="container-scroller">
			<div class="container-fluid page-body-wrapper full-page-wrapper">
				<div class="content-wrapper d-flex align-items-center auth px-0">
					<div class="row w-100 mx-0">
						<div class="col-lg-4 mx-auto">
							<div class="auth-form-light text-left py-5 px-4 px-sm-5">
								<div class="brand-logo" style="text-align:center; margin-top:-10px">
									<img src="../../images/trans_logo.png" alt="logo">
								</div>
								<div style="display: flex; justify-content:center; margin-top:-20px">
									<a style="margin-right: 80px; font-weight:bold; color:black	" class="inscri" href="login">
										Se connecter</a>
									<a style="color:#56ab2f; font-weight:bold; text-decoration:underline">
										S'inscrire</a>
								</div>


								<div class="pt-3">
									{% if emptySubmission %}
										<div class="alert alert-danger" role="alert">
											Veuillez remplir tous les champs convenablement.
										</div>
									{% endif %}
									{{ form_start(f,{'attr':{'novalidate':'novalidate'}}) }}
									<div class="register1" id="register1">
										<div class="form-group">
											<label for="exampleInputNom1">{{ form_label(f.nom) }}</label>
											{{ form_widget(f.nom, {'attr': {'class': 'form-control' ~ (form_errors(f.nom) ? ' is-invalid' : ''), 'id': 'exampleInputUsername1', 'placeholder': 'Nom'}}) }}
											{% if form_errors(f.nom) %}
												<div class="invalid-feedback">
													{{ form_errors(f.nom) }}
												</div>
											{% endif %}
										</div>
										<div class="form-group">
											<label for="exampleInputPrenom1">{{ form_label(f.prenom) }}</label>
											{{ form_widget(f.prenom, {'attr': {'class': 'form-control' ~ (form_errors(f.prenom) ? ' is-invalid' : ''), 'id': 'exampleInputEmail1', 'placeholder': 'Prenom'}}) }}
											{% if form_errors(f.prenom) %}
												<div class="invalid-feedback">
													{{ form_errors(f.prenom) }}
												</div>
											{% endif %}
										</div>
										<div class="form-group">
											<label for="exampleInputEmail1">{{ form_label(f.email) }}</label>
											{{ form_widget(f.email, {'attr': {'class': 'form-control' ~ (form_errors(f.email) ? ' is-invalid' : ''), 'id': 'exampleInputEmail1', 'placeholder': 'Email'}}) }}
											{% if form_errors(f.email) %}
												<div class="invalid-feedback">
													{{ form_errors(f.email) }}
												</div>
											{% endif %}
										</div>
										<div class="form-group">
											<label for="exampleInputPassword1">{{ form_label(f.motDePasse) }}</label>
											{{ form_widget(f.motDePasse, {'attr': {'class': 'form-control' ~ (form_errors(f.motDePasse) ? ' is-invalid' : ''), 'id': 'exampleInputPassword1', 'placeholder': 'Mot de passe'}}) }}
											{% if form_errors(f.motDePasse) %}
												<div class="invalid-feedback">
													{{ form_errors(f.motDePasse) }}
												</div>
											{% endif %}
										</div>
										<div class="form-group">
											<label for="exampleInputUsername1">{{ form_label(f.genre) }}</label>
											{{ form_widget(f.genre, {'attr': {'class': 'form-control', 'id': 'exampleInputUsername1', 'placeholder': 'Genre'}}) }}
											{{ form_errors(f.genre) }}
										</div>
										<div class="form-group">
											<label for="exampleInputUsername1">{{ form_label(f.numTel) }}</label>
											<img src="{{ flag }}" alt="Drapeau de {{ country_name }}" style="width:20px; height:20px; margin-left:-80px; margin-bottom:-85px;">

											{{ form_widget(f.numTel, {'attr': {'class': 'form-control' ~ (form_errors(f.numTel) ? ' is-invalid' : ''), 'id': 'exampleInputUsername1', 'placeholder': 'Numéro de téléphone'}}) }}
											{% if form_errors(f.numTel) %}
												<div class="invalid-feedback">
													{{ form_errors(f.numTel) }}
												</div>
											{% endif %}
										</div>
										<div class="form-group">
											<label for="exampleInputUsername1">{{ form_label(f.adresse) }}</label>
											{{ form_widget(f.adresse, {'attr': {'class': 'form-control' ~ (form_errors(f.adresse) ? ' is-invalid' : ''), 'id': 'exampleInputUsername1', 'placeholder': 'Adresse'}}) }}
											{% if form_errors(f.adresse) %}
												<div class="invalid-feedback">
													{{ form_errors(f.adresse) }}
												</div>
											{% endif %}
										</div>
										<div class="form-group">
											<label for="exampleInputEmail1">{{ form_label(f.objectif) }}</label>
											{{ form_widget(f.objectif, {'attr': {'class': 'form-control' ~ (form_errors(f.objectif) ? ' is-invalid' : ''), 'id': 'exampleInputEmail1', 'placeholder': 'Objectif'}}) }}
											{% if form_errors(f.objectif) %}
												<div class="invalid-feedback">
													{{ form_errors(f.objectif) }}
												</div>
											{% endif %}
										</div>

										<div class="form-group">
											<label for="exampleInputUsername1">{{ form_label(f.photo) }}</label>
											<div class="custom">
												{{ form_widget(f.photo, {'attr': {'class': 'form-control' ~ (form_errors(f.photo) ? ' is-invalid' : ''), 'id': 'exampleInputUsername1', 'placeholder': 'Attestation'}}) }}
											</div>
											{% if form_errors(f.photo) %}
												<div class="invalid-feedback">
													{{ form_errors(f.photo) }}
												</div>
											{% endif %}
										</div>

										<script>
											document.addEventListener('DOMContentLoaded', function () {
var inputFile = document.querySelector('.custom-file-input');
var fileNameDisplay = document.getElementById('file-name');
inputFile.addEventListener('change', function (e) {
var fileName = e.target.files[0].name;
fileNameDisplay.textContent = fileName; // Affiche le nom du fichier
});
});
										</script>

										<div class="mb-4">

											<div class="mt-3">
												<a class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" style="background-color:#56ab2f; border-color:#56ab2f;">Continuer</a>
											</div>
											<div class="text-center mt-4 font-weight-light">
												Vous avez déjà un compte?
												<a href="login" style="color:#56ab2f;">Connexion</a>
											</div>
										</div>
									</div>
									<div class="register IMC" id="registerIMC" style="display: none;">
										<div class="row" style="margin-bottom:20px;">
											<div class="col">
												<img src="../../images/silhouette-de-corps-humain-debout.png" alt="logo" style="width:150px; height:150px; margin-left:5px;">
											</div>
											<div class="col">
												<img src="../../images/balance.png" alt="logo" style="width:150px; height:150px; margin-left:5px;">
											</div>
										</div>
										<div class="row">
											<div class="col">
												<div class="form-group">
													{{ form_widget(f.taille, {'attr': {'class': 'form-control', 'id': 'taille', 'placeholder': 'Taille', 'style': 'width: 170px;'}})}}
													{{ form_errors(f.taille) }}
												</div>
											</div>
											<div class="col">
												<div class="form-group">
													{{ form_widget(f.poids, {'attr': {'class': 'form-control', 'id': 'poids', 'placeholder': 'Poids', 'style': 'width: 170px;'}}) }}
													{{ form_errors(f.poids) }}
												</div>
											</div>
											<div style="margin-bottom:10px; margin-left:30px;"> Votre IMC est : <span id="imcDisplay"> {{imc}} </span>
											</div>
										</div>
										{{ form_end(f) }}
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<!-- content-wrapper ends -->
			</div>
			<!-- page-body-wrapper ends -->
		</div>
		<!-- container-scroller -->
		<!-- plugins:js -->
		<script src="../../vendors/js/vendor.bundle.base.js"></script>
		<!-- endinject -->
		<!-- Plugin js for this page -->
		<!-- End plugin js for this page --><script src="../../js/off-canvas.js"> </script>
		<script src="../../js/hoverable-collapse.js"></script>
		<script src="../../js/template.js"></script>
		<script src="../../js/settings.js"></script>
		<script src="../../js/todolist.js"></script>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

		<script>
			$(document).ready(function () {
$(".auth-form-btn").click(function () {
$("#register1").hide();
$("#registerIMC").show();
});
});
		</script>


	</body>

</html>
