{% extends 'user/profilClient.html.twig' %}

{% block href %}
	href="/profilClient/{{user.idUtilisateur}}"
{% endblock %}

{% block contenu %}

	<div class="side" id="mdpClient" style="position: relative; width: 1500px; height: 1500px; border-radius: 8px; overflow: hidden; margin-left: 600px; margin-top: 100px;">

		<div class="col-md-6 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">
					{% if error %}
						<div class="alert alert-danger" role="alert">
							Le mot de passe actuel est incorrect!
						</div>
					{% endif %}

					<h4 class="card-title">Modifier votre mot de passe</h4>

					<div class="forms-sample">
						{{ form_start(f2,{'attr':{'novalidate':'novalidate'}}) }}
						<div class="form-group">
							<input type="password" name="ancienMDP" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Mot de passe actuel" required autofocus>
						</div>

						<div
							class="form-group">
							{# Affichage du champ nouveauMotDePasse #}
							<label for="exampleInputUsername1">{{ form_label(f2.mot_de_passe) }}</label>
							{{ form_widget(f2.mot_de_passe, {'attr': {'class': 'form-control', 'id': 'exampleInputUsername1', 'placeholder': 'Nouveau mot de passe'}}) }}
							{{ form_errors(f2.mot_de_passe) }}
						</div>
						{{ form_end(f2) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
