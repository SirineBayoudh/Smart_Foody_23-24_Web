  <script>
    document.addEventListener('DOMContentLoaded', function() {
        const descriptionInput = document.querySelector('#{{ form.description.vars.id }}');
        const titreInput = document.querySelector('#{{ form.titre.vars.id }}');

        // Fonction pour détecter les changements dans le champ de description
        function handleDescriptionChange() {
            if (descriptionInput.value.trim() !== '') {
                descriptionInput.classList.remove('is-invalid'); // Retirer la classe d'erreur
            } else {
                descriptionInput.classList.add('is-invalid'); // Ajouter la classe d'erreur
            }
        }

        // Fonction pour détecter les changements dans le champ de titre
        function handleTitreChange() {
            if (titreInput.value.trim() !== '') {
                titreInput.classList.remove('is-invalid'); // Retirer la classe d'erreur
            } else {
                titreInput.classList.add('is-invalid'); // Ajouter la classe d'erreur
            }
        }

        // Écouter les événements de changement dans le champ de description
        descriptionInput.addEventListener('input', function() {
            handleDescriptionChange();
        });

        // Écouter les événements de changement dans le champ de titre
        titreInput.addEventListener('input', function() {
            handleTitreChange();
        });

        // Vérifier si le champ de description contient déjà du texte au chargement de la page
        handleDescriptionChange();
        // Vérifier si le champ de titre contient déjà du texte au chargement de la page
        handleTitreChange();
    });
</script>



