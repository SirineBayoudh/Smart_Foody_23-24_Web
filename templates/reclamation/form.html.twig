<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('myForm');
    const containsBadWord = form.getAttribute('data-contains-bad-word');

    function desFieldEmpty() {
        const descriptionInput = document.querySelector('#{{ form.description.vars.id }}');
        return descriptionInput.value.trim() === '';
    }

    function titreFieldEmpty() {
        const titreInput = document.querySelector('#{{ form.titre.vars.id }}');
        return titreInput.value.trim() === '';
    }

    function handleSubmit(event) {
        if (containsBadWord === '1') {
            event.preventDefault();
           // alertify.error("Votre message contient un gros mot. Veuillez modifier votre saisie.");
        } else if (desFieldEmpty() || titreFieldEmpty()) {
            event.preventDefault();
           // alertify.error("Veuillez remplir tous les champs.");
        } else {
            //alertify.success("La réclamation a été soumise avec succès!  (containsBadWord = " + containsBadWord + ")!");
        }
    }

    form.addEventListener('submit', function(event) {
        handleSubmit(event);
    });
});
</script>

